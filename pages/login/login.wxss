.login-header{
  padding: 100rpx 44rpx;
}

.login-logo{
  margin: 0 auto;
  width: 380rpx;
  height: 88rpx;
}

.login-mark{
font-size:40rpx;
font-weight:400;
color:rgba(125,125,125,1);
line-height:40rpx;
text-align: center;
}

.login-way{
width:540rpx;
height:340rpx;
background:rgba(255,255,255,1);
margin: 0 auto;
margin-top: 124rpx;
}

.login-way .login-way-weChat{
  height: 170rpx;
  font-size:30rpx;
font-weight:400;
color:rgba(0,0,0,1);
line-height:170rpx;
text-align: center;
}

.login-way .login-way-account{
  height: 170rpx;
  font-size:30rpx;
  font-weight:300;
  color:rgba(0,0,0,1);
  line-height:170rpx;
  text-align: center;
}

.login-form{
  margin: 30rpx;
  padding: 60rpx 35rpx;
  background-color: #fff;
  box-shadow:0px 14px 20px 0px rgba(0,0,0,0.04);
  border:1px solid rgba(237,237,237,1);
}

.login-form-way{
  margin-bottom: 88rpx;
}

.curWay{
  display: inline-block;
  position: relative;
  padding: 0 25rpx 34rpx 25rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(0,0,0,1);
  line-height:32rpx;
}

.unCurWay{
  display: inline-block;
  padding: 0 25rpx 34rpx 25rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(125,125,125,1);
  line-height:32rpx;
}

.curWay-line{
  display: inline-block;
  position: absolute;
  bottom: 0;
  left: 50%;
  width: 24rpx;
  height: 3rpx;
  margin-left: -12rpx;
  background:rgba(0,0,0,1);
  border-radius:2rpx;
}

.login-weChat-phone{
  text-align: center;
  font-size:30rpx;
  font-weight:400;
  color:rgba(89,89,89,1);
  line-height:42rpx;
  margin: 30rpx;
  padding: 30rpx;
}

.code-area{
  position: relative;
}
.code-tip-btn{
  position: absolute;
  top: 24rpx;
  right: 16rpx;
  z-index: 2;
  min-width: 200rpx;
  text-align: center;
  padding: 8rpx 16rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(36,36,36,1);
  line-height:40rpx;
}

.submit-btn{
  margin-top: 80rpx;
}

.login-bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: -1;
  background: #f5f5f5;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: 0% 88rpx;
  background-size:100% 100%;
}

.login-height-auto{
  height: auto;
}
