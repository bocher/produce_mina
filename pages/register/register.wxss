/* pages/register/register.wxss */

.arrow {
  position: absolute;
  right: 30rpx;
  top: 30%;
  transform: rotate(90deg);
}

.row {
  align-items: center;
  margin: 20rpx 0 30rpx 0;
}

.row text {
  width: 180rpx;
}

.row .content {
  position: relative;
  height: 70rpx;
  display: flex;
  flex: 1;
  align-items: center;
  border: 1rpx solid rgb(211, 210, 210);
  border-radius: 30rpx;
}

.row .content picker {
  width: 100%;
}

.row .content .picker {
  width: 100%;
  height: 100%;
}

.row .content .ipt {
  width: 100%;
  height: 100%;
  padding: 0 26rpx;
}

.back {
  color: #f5a620;
}

.btns .register-btn {
  display: inline-block;
  padding: 26rpx 160rpx;
  background: #f5a620;
  border-radius: 40rpx;
  color: #fff;
}
