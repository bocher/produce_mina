page {
  background-color: #f8f8f8;
}

.user {
  width: 100%;
  height: 100%;
}

.list {
  background: #f8f8f8;
  padding: 20rpx 35.15rpx;
  background: #fff;
  font-size: 28rpx;
  align-items: center;
}

.list-info {
  color: #999;
}

.avatar image {
  margin-top: 10rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.info {
  height: 421.85rpx;
  background: url(images/bg.png);
  margin-bottom: 23.44rpx;
}

.info-wrap {
  margin: auto;
  text-align: center;
}

.info-icon {
  width: 164rpx;
  height: 164rpx;
  border: 4.69rpx solid #fff;
  border-radius: 82rpx;
  margin-top: 105.46rpx;
  margin-bottom: 29.29rpx;
}


.list-arrow {
  width: 11.72rpx;
  height: 25.78rpx;
  margin: 35rpx 0 0 18.75rpx;
}
.order {
  overflow: hidden;
  display: -webkit-box;
  background: #fff;
  margin-bottom: 23.44rpx;
  font-size: 25.78rpx;
  height: 166.40rpx;
}

.order-cell {
  text-align: center;
  -webkit-box-flex: 1;
  margin-top: 42.18rpx;
  position: relative;
}

.order-cell-icon-big {
  width: 51.56rpx;
  height: 46.87rpx;
  margin-bottom: 11.72rpx;
}

.order-cell-icon-small {
  width: 44.53rpx;
  height: 46.87rpx;
  margin-bottom: 11.72rpx;
}

.infomation {
  align-items: center;
}

