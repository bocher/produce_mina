
page {
  background-color: #f5f5f5;
}

.login-wrap{
  margin: 320rpx 30rpx 30rpx 30rpx;
  padding: 60rpx 40rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow:0px 14px 20px 0px rgba(0,0,0,0.04);
  border:1px solid rgba(237,237,237,1);
}

.submit-btn{
  height:88rpx;
  line-height: 88rpx;
  font-size:30rpx;
  font-weight:400;
  color: #fff;
  background:#FFA800;
  border-radius:8rpx;
}

.btn-disabled{
  background:rgb(248, 211, 138);
}

.login-bg{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  z-index: -1;
  background: #f5f5f5;
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-position: 0% 88rpx;
  background-size:100% 100%;
}