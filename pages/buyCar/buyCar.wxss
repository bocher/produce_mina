  border-radius:25rpx;
  padding: 10rpx 20rpx;
  min-width: 120rpx;
  height:50rpx;
  font-size:24rpx;
  color: #CECDCC;
  background-color: #fff;
  border: 1rpx solid #CECDCC;
}

.goBuy-btn{
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:36rpx;
  width: 240rpx;
  height:72rpx;
  margin: 0 auto;
  font-size:30rpx;
  color: #fff;
  padding: 0 30rpx;
  background-color: #FFA800;
}