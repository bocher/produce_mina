.buy-item {
  margin: 30rpx;
  padding: 24rpx;
  border: 1rpx dashed rgb(247, 198, 107);
  border-radius: 12rpx;
  background-color: #FFFBF7;
}

.buy-item .shop-icon{
  width: 30rpx;
  height: 30rpx;
}

.buy-item .state-1-btn{
  display:flex;
  align-items:center;
  justify-content:center;
  border-radius:25rpx;
  padding: 10rpx 20rpx;
  min-width: 120rpx;
  height:50rpx;
  font-size:24rpx;
  color: #FFA800;
  background-color: #f5f5f5;
  border: 1rpx solid #FFA800;
}

.buy-item .state-2-btn{
  display:flex;
  align-items:center;
