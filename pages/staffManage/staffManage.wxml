<!--pages/staffManage/staffManage.wxml-->
<view class="staffManage pl20 pr20">
  <mp-dialog show="{{showOneButtonDialog}}" bindbuttontap="tapDialogButton" buttons="{{oneButton}}">
    <view class="addinfo piker pb20 flex ju-c">
      <text>店铺：</text>
      <picker bindchange="bindPickerChange2" value="{{array[index]}}" range="{{array}}">
        <view class="picker">
          <input class="weui-input" disabled="true" value="{{shopName}}" />
        </view>
      </picker>
      <image src="../../images/icon_down@2x.png" class="select"></image>
      <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo piker pb20 flex ju-c">
      <text>工种：</text>
      <picker bindchange="bindPickerChange3" value="{{array[index]}}" range="{{array}}">
        <view class="picker">
          <input class="weui-input" disabled="true" value="{{worktype}}" />
        </view>
      </picker>
      <image src="../../images/icon_down@2x.png" class="select"></image>
      <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo pb20 flex ju-c">
      <text>员工名：</text>
      <input class="weui-input" />
      <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo pb20 flex ju-c">
      <text>联系电话：</text>
      <input class="weui-input" />
      <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo pb20 flex ju-c">
      <text>账号：</text>
      <input class="weui-input" />
      <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo pb20 flex ju-c">
      <text>密码：</text>
      <input class="weui-input" />
      <view class="half-px-border half-px-border-bottom"></view>
    </view>
  </mp-dialog>
  <view class="search flex ju-b pt10 pb10">
    <view class="ipt" bindtap="selectShop">
      <picker bindchange="bindPickerChange" value="{{array[index]}}" range="{{array}}">
        <view class="picker">
          <input class="weui-input" value="{{inputValue}}" disabled="true" />
        </view>
      </picker>
      <image src="../../images/icon_down@2x.png" class="select"></image>
    </view>
    <view class="add pl20 flex" bindtap="addShop">
      <mp-icon icon="add2" color="black" size="{{26}}"></mp-icon>
    </view>
  </view>
  <view class="list">
    <view class="list-item pt10 pb10 flex ju-b" wx:for="{{list}}" wx:key="index">
      <view class="flex">
        <view class="portrait pr10">
          <image src="../../images/head_img.png"></image>
        </view>
        <view class="info">
          <view class="name">{{item.name}}
            <text class="remark ml5">({{item.remark}})</text>
          </view>
          <view class="people gray9">电话：
            <text>{{item.phone}}</text> </view>
        </view>
      </view>
      <view class="icon">
        <mp-icon icon="arrow" color="black" size="{{14}}"></mp-icon>
      </view>
      <view class="half-px-border half-px-border-bottom"></view>
    </view>
  </view>
</view>
<view class="fix-iphonex-button" wx:if="{{isIpx}}"></view>