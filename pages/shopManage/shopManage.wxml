<!--pages/shopManage/shopManage.wxml-->
<view class="shopManage pl20 pr20">
  <mp-dialog show="{{showOneButtonDialog}}" bindbuttontap="tapDialogButton" buttons="{{oneButton}}">
    <view class="addinfo pb10 pt10 flex ju-c">
      <text>店铺名：</text>
      <input class="weui-input" />
        <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo pb10 pt10 flex ju-c">
      <text>负责人：</text>
      <input class="weui-input" />
        <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo pb10 pt10 flex ju-c">
      <text>联系电话：</text>
      <input class="weui-input" />
        <view class="half-px-border half-px-border-bottom"></view>
    </view>
    <view class="addinfo pb10 pt10 flex ju-c">
      <text>备注：</text>
      <input class="weui-input" />
        <!-- <view class="half-px-border half-px-border-bottom"></view> -->
    </view>
  </mp-dialog>
  <view class="search flex ju-b pt10 pb10">
    <view class="ipt">
      <input class="weui-input" bindinput="bindKeyInput" placeholder="" />
    </view>
    <view class="add pl20 flex" bindtap="addShop">
      <mp-icon icon="add2" color="black" size="{{26}}"></mp-icon>
    </view>
  </view>
  <view class="list">
    <view class="list-item pt10 pb10 flex ju-b" wx:for="{{list}}" wx:key="index">
      <view class="info">
        <view class="name">{{item.shopName}}
          <text class="remark ml5">({{item.remark}})</text>
        </view>
        <view class="people gray9">负责人名字：
          <text>{{item.name}}</text>
          <text>{{item.phone}}</text> </view>
      </view>
      <view class="icon">
        <mp-icon icon="arrow" color="black" size="{{10}}"></mp-icon>
      </view>
        <view class="half-px-border half-px-border-bottom"></view>
    </view>
  </view>
</view>
<view class="fix-iphonex-button" wx:if="{{isIpx}}"></view>