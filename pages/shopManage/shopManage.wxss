/* pages/shopManage/shopManage.wxss */

.w180 {
  flex: 0 0 180rpx;
}

.addinfo {
  position: relative;
}

.addinfo text {
  width: 160rpx;
  text-align: right;
}

.addinfo .weui-input {
  text-align: left;
  padding-left: 10rpx;
}

.weui-dialog__hd {
  padding: 30rpx 0 !important;
}

.weui-dialog__bd {
  margin-bottom: 14rpx !important;
}

.weui-dialog__ft {
  min-height: 55rpx !important;
  line-height: 55rpx !important;
}

.weui-dialog__ft::after {
  border-top: 1rpx solid #f3f3f3 !important;
}

.weui-dialog__btn {
  line-height: 110rpx;
  font-size: 32rpx !important;
  color: #333 !important;
}

.search .ipt {
  width: 100%;
}

.search .ipt input {
  color: #000;
  padding-left: 30rpx;
  height: 60rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ffeabf;
  background-color: #fffbf7;
}

.list-item {
  position: relative;
  align-items: center;
}

.info .name {
  line-height: 64rpx;
}

.info .remark {
  color: #ffb017;
}

.icon .weui-icon {
  background: #999 !important;
}

.icon .repeal {
  color: #fff;
  height: 76rpx;
  background: #ffb017;
  line-height: 76rpx;
  padding: 0 16rpx;
  border-radius: 10rpx;
}

.add {
  align-items: center;
}
