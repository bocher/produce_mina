/* pages/index/index.wxss */
.menu-wrap {
  height: 100vh;
  padding: 80rpx 0;
  position: relative;
}

image {
  width: 100%;
  height: 100%;
}

/* 顶部城市店铺 */
.head-wrap{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  padding: 5rpx 30rpx 15rpx 30rpx;
  background-color: #fff;
  z-index: 9;
  box-shadow:0 0 4rpx rgb(238, 236, 236);
}

.head-wrap .city-wrap .triangle-wrap{
  width: 24rpx;
  height: 14rpx;
}

.head-wrap .shop-search{
  display:flex;
  align-items:center;
  border-radius:28rpx;
  height:56rpx;
  font-size:24rpx;
  color: #999;
  line-height:48rpx;
  padding: 0 20rpx;
  background-color: #F9F9F9;
  border:2rpx solid rgb(236, 236, 236);
}

.head-wrap .shop-wrap {
  display:flex;
  align-items:center;
  border-radius:28rpx;
  height:56rpx;
  font-size:24rpx;
  color: #333;
  line-height:48rpx;
  padding: 0 20rpx;
  background-color: #F9F9F9;
  border:2rpx solid #FFA800;
}

.head-wrap .search-wrap{
  width: 40rpx;
  height: 40rpx;
}

.head-wrap .head-icon{
  width: 48rpx;
  height: 48rpx;
}

/* 菜谱区域 */
.content-wrap {
  position: relative;
  width: 100%;
  height: 100%;
  background: #fff;
}

.category-list {
  position: fixed;
  top: 80rpx;
  left: 0;
  bottom: 80rpx;
  width: 180rpx;
  background-color: #f7f5f5;
}

.category-list .categoryItem {
  width: 180rpx;
  padding: 22rpx 28rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  color: #333;
  position: relative;
}

.category-list .categoryItem .badge-wrap {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  z-index: 2;
}

.category-list .categoryItem .badge {
  height: 28rpx;
  line-height: 28rpx;
  min-width: 28rpx;
  padding: 0 8rpx;
}

.category-list .categoryItem .icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.category-list .categoryItem.cur {
  background-color: #fff;
  font-weight: 600;
}

.product-list {
  height: 100%;
  padding-left: 180rpx;
}

.product-list .category-bar {
  height: 60rpx;
  position: relative;
}

.product-list .category-bar .title-wrap {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  width: 100%;
  font-size: 30rpx;
  color: #333;
  font-weight: 500;
  background: #fff;
  padding: 10rpx 20rpx 0rpx 20rpx;
}

.product-list .category-bar .title-wrap.cur {
  color: #262626;
}

.product-list .goodsItem {
  height: 200rpx;
  padding: 20rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  position: relative;
}

.product-list .goodsItem .image-wrap {
  width: 160rpx;
  height: 160rpx;
  margin-right: 24rpx;
}

.product-list .goodsItem .image-wrap image {
  border-radius: 16rpx;
}

.product-list .goodsItem .icon-wrap{
  height: 100%;
  margin-left: 12rpx;
}

.product-detail-wrap {
  height: 100%;
  flex: 1;
  overflow: hidden;
}

.product-list .product-detail-wrap .title {
  line-height: 48rpx;
}

.product-detail-wrap .label{
  margin-top: 10rpx;
  padding: 6rpx 12rpx;
  border: 2rpx solid #e3e3e3;
  border-radius: 46rpx;
}

.product-detail-wrap .price {
  color: #FFA800;
  font-weight: 700;
  line-height: 36rpx;
}

.product-detail-wrap .unit {
  color: #999999;
  margin-left: 12rpx;
}

/* 为了不让购物车挡住最后一个产品，多加一个空白占位的元素 */

.product-list .placeholder {
  height: 200rpx;
}

/* 底部购物车数据 */
.foot-wrap{
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 80rpx;
  padding: 10rpx 30rpx;
  background-color: #fff;
  z-index: 9;
  box-shadow:0 0 4rpx rgb(238, 236, 236);
}

.foot-wrap .image-wrap{
  width: 44rpx;
  height: 44rpx;
}

.foot-wrap .selectedNum{
  width: 130rpx;
  padding: 12rpx 20rpx;
  font-size: 26rpx;
  line-height: 32rpx;
  color: #333;
  position: relative;
}

.foot-wrap .selectedNum .badge-wrap {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  z-index: 2;
}

.foot-wrap .selectedNum .badge {
  height: 28rpx;
  line-height: 28rpx;
  min-width: 28rpx;
  padding: 0 8rpx;
}

.foot-wrap .add_btn{
  float: right;
  display:flex;
align-items:center;
justify-content:center;
  border-radius:30rpx;
  height:60rpx;
  font-size:30rpx;
  color: #fff;
  line-height:48rpx;
  padding: 0 20rpx;
  background-color: #FFA800;
}

.half-px-border {
  top: 0;
  left: 0;
  width: 100%;
}

.half-px-border.surround::before {
  border-color: #e3e3e3;
  border-radius: 22rpx;
}