/* 输入框 */

.input-content{
  padding: 24rpx 16rpx;
  font-size:32rpx;
  font-weight:400;
  color:rgba(89,89,89,1);
  line-height:40rpx;
  background-color: #fff;
  border-radius:2rpx;
  border:1rpx solid rgba(187,187,187,1);
  margin-bottom: 32rpx;
}

.input-placeholder{
  font-size:32rpx;
  font-weight:400;
  color:rgba(187,187,187,1);
  line-height:40rpx;
}

/* 超出省略号 */

.overflow {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.overflow-2line {
  word-break: break-all;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/* 0.5px边框 */

.half-px-border {
  position: absolute;
}

.half-px-border::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #e5e5e5;
  border-top-width: 1px;
}

.half-px-border.vertical::before {
  border-left-width: 1px;
}

.half-px-border.surround::before {
  border-width: 1px;
}

/* 阴影 */

.shadow-10 {
  box-shadow: 0px 2rpx 8rpx 0px rgba(12, 12, 13, 0.1);
}

.shadow-20 {
  box-shadow: 0px 4rpx 16rpx 0px rgba(12, 12, 13, 0.1);
}

.shadow-30 {
  box-shadow: 0px 8rpx 32rpx 0px rgba(12, 12, 13, 0.1);
}

