/* 遮罩 */

.mask {
  position: fixed;
  z-index: 11;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.70);
  transition: all 0.2s ease-in-out;
  opacity: 0;
  visibility: hidden;
}

.mask.show {
  opacity: 1;
  visibility: visible;
}

/* 箭头 */

.common-arrow {
  position: relative;
  width: 8px;
  height: 16px;
}

.common-arrow::after {
  content: " ";
  display: inline-block;
  width: 8px;
  height: 8px;
  position: absolute;
  top: 50%;
  left: 0;
  border-style: solid;
  border-color: #ccc;
  transform: translateY(-50%) matrix(0.71, 0.71, -.71, 0.71, 0, 0);
}

.common-arrow.right::after {
  left: -4px;
  border-width: 2px 2px 0 0;
}

.common-arrow.left::after {
  left: 3px;
  border-width: 0 0 2px 2px;
}

.common-arrow.small {
  width: 6px;
  height: 12px;
}

.common-arrow.small::after {
  width: 6px;
  height: 6px;
}

.common-arrow.right.small::after {
  border-width: 1px 1px 0 0;
}

.common-arrow.left.small::after {
  border-width: 0 0 1px 1px;
}

.common-arrow.large {
  width: 10px;
  height: 20px;
}

.common-arrow.large::after {
  width: 10px;
  height: 10px;
}

/* 动画 */

.slideIn-transition {
  transition-property: all;
  transition-timing-function: ease-out;
}

.slideOut-transition {
  transition-property: all;
  transition-timing-function: ease-in;
}

.animation-duration-fast {
  animation-duration: 0.1s;
}

.animation-duration-default {
  animation-duration: 0.2s;
}

.animation-duration-slow {
  animation-duration: 0.3s;
}

.transition-duration-fast {
  transition-duration: 0.1s;
}

.transition-duration-default {
  transition-duration: 0.2s;
}

.transition-duration-slow {
  transition-duration: 0.3s;
}

image {
