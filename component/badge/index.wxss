.badge {
  position: relative;
  line-height: 1;
  vertical-align: middle;
}

.badge-count {
  min-width: 32rpx;
  height: 32rpx;
  line-height: 32rpx;
  color: #fff;
  background: #ff4433;
  padding: 0 10rpx;
  box-sizing: border-box;
  text-align: center;
}

.badge-count.single {
  border-radius: 50%;
}

.badge-count.double {
  border-radius: 18rpx;
}

.badge.default .badge-count {
  position: absolute;
  transform: translate(50%, -50%);
  top: 0;
  right: 0;
  z-index: 10;
}

.badge-dot {
  border-radius: 50%;
  z-index: 10;
  height: 10px;
  width: 10px;
  color: #fff;
  background: #FFA800;
  border: 1px solid rgba(255, 255, 255, 1);
}

.badge.default .badge-dot {
  position: absolute;
  transform: translate(-50%, -50%);
  top: 0;
  right: 0;
}
